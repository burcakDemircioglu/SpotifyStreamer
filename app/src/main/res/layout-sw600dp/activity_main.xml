<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_streamer"
    android:name="com.example.burcakdemircioglu.spotifystreamer.MainActivityFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal">

    <fragment
        android:id="@+id/fragment_artist"
        android:name="com.example.burcakdemircioglu.spotifystreamer.MainActivityFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
         />

    <FrameLayout
        android:id="@+id/tracks_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:text="FRAGMENT TRACKS CONTAINER"/>


</LinearLayout>
